@font-face{
	font-family:Icons;
	src:url(../fonts/icons.eot);
	src:url(../fonts/fontawesome-webfont.eot?#iefix) format('embedded-opentype'),
		url(../fonts/fontawesome-webfont.woff2) format('woff2'),
		url(../fonts/fontawesome-webfont.woff) format('woff'),
		url(../fonts/fontawesome-webfont.ttf) format('truetype'),
		url(../fonts/fontawesome-webfont.svg#icons) format('svg');
	font-style:normal;
	font-weight:400;
	font-variant:normal;
	text-decoration:inherit;
	text-transform:none;
}

font-logo="anagram"

color-base=#933894
color-base2=#E13E95
bg-base=#933894
bg-base2=#E13E95

/* semantic custom */
.ui.secondary.pointing.menu .active.item, .ui.secondary.pointing.menu .active.item:hover
	border-color: color-base2;
	color: color-base2

.ui.menu .item 
	color: color-base; 
	
.bg-base
	background: bg-base !important
	
.bg-base2
	background: bg-base2 !important
	
.color-base 
	color: color-base
	
.color-base2 
	color: color-base2
	
.item.logo >.content 
	font-family: font-logo
	font-size: 1.5em
	margin-left:0.1em
	letter-spacing:0.04em
	
.item.header.logo>.content 
	font-size: 1em
	letter-spacing:0.1em

#mainNav 
	z-index: 1
	background: bg-base
#mainNav .item 
	padding: 1.2em
#mainNav .item.logo 
	padding-top: 0.2em
	padding-bottom: 0.2em
	-webkit-align-self: auto
	align-self: auto
	
.main
	height:500px
	display:flex
	flex-direction:column
	align-items:center
	justify-content:center
	text-align:center
	background:bg-base
	position:relative
	box-shadow:0px 2px 3px #ddd
	
	.header > .anagram
		font-size:1.75em
		letter-spacing:3px
		
	.header > .sub.header
		font-size:0.95em !important
		letter-spacing:1px !important
		
	.mascot
		width:100px
		position:absolute
		bottom:0
	
	.mascot.left
		left:0
	
	.mascot.right
		right:0
	
.anagram
	font-family:anagram !important
	
.main2
	background:-moz-radial-gradient(8% 87% 138deg, #D7E6F3, #FFFFFE 100%);
	padding-top:50px

.text.purple
	color:color-base
	
a
	text-decoration:none !important

.main3
	
	.row
		.column
			margin-bottom:25px !important
			
	.content-detail
		p
			color:#333 !important
			

.main4
	background-image:url('../img/background/bgfoot.jpg')
	background-size:cover
	background-repeat:no-repeat
	background-attachment:fixed
	height:350px;
	
	.mask
		background-color:rgba(0,0,0,0.3)
		display:flex
		flex-direction:column
		align-items:center
		justify-content:center
		width:100%
		height:100%
		color:#fff
		text-align:center
		
.ui.uncover.sidebar, .ui.visible.push.sidebar, .ui.visible.uncover.sidebar
	transform:translate3d(0,0,0) !important